<% new_or_existing = phone.new_record? ? 'new' : 'existing' %>
<% prefix = "client[#{new_or_existing}_phone_attributes][]" %>
<% fields_for prefix, phone do |f| -%>
  <li><% if !phone.new_record? %><small><%= context %></small><% end %> <%= f.text_field :number, :placeholder => context %><%= f.hidden_field :context, :value => context %></li>
<% end -%>